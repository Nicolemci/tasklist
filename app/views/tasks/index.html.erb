<p style="color: green"><%= notice %></p>

<h1 class="tasks-header">Tasks</h1>


<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path, style: "font-size: 20px; text-align: center; color: #3588db;" %>
<%= stylesheet_link_tag %>
